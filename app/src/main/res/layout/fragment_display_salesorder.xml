<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/salesorder_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dimen_20dp"
    android:paddingTop="@dimen/dimen_15dp"
    android:paddingRight="@dimen/dimen_20dp"
    android:paddingBottom="@dimen/dimen_15dp"
    android:tag="layout/salesorder_list_item_0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dimen_5dp">

        <TextView
            android:id="@+id/customer_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:singleLine="true"
            android:tag="binding_1"
            android:text="AAA"
            android:textColor="@color/common_value_color"
            android:textSize="@dimen/dimen_16sp" />

        <TextView
            android:id="@+id/salesorder_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:gravity="end"
            android:singleLine="true"
            android:tag="binding_2"
            android:text="AAA"
            android:textColor="@color/common_value_color"
            android:textSize="@dimen/dimen_16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dimen_7dp">

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/salesorder_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/dimen_10dp"
                android:singleLine="true"
                android:tag="binding_3"
                android:text="AAA"
                android:textColor="@color/details_title"
                android:textSize="@dimen/dimen_13sp" />

            <ImageView
                android:id="@+id/sales_channel_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/dimen_10dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/backorder_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/dimen_10dp"

                android:tag="binding_4" />

            <ImageView
                android:id="@+id/dropship_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/dimen_10dp"

                android:tag="binding_5" />
        </com.google.android.flexbox.FlexboxLayout>

        <TextView
            android:id="@+id/status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight="0.5"
            android:gravity="end"
            android:singleLine="true"
            android:tag="binding_6"
            android:text="AAA"
            android:textAllCaps="true"
            android:textSize="@dimen/dimen_12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_15dp"
        android:singleLine="true"
        android:tag="binding_7"
        android:text="AAA"
        android:textColor="@color/list_item_color"
        android:textSize="@dimen/dimen_14sp" />

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/invoice_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_5dp" />

        <TextView
            android:id="@+id/invoiced_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_20dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="@string/quantity_invoiced"
            android:textAllCaps="true"
            android:textColor="@color/list_header_color"
            android:textSize="@dimen/dimen_11sp" />

        <ImageView
            android:id="@+id/packed_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_5dp" />

        <TextView
            android:id="@+id/packed_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_20dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="@string/packed"
            android:textAllCaps="true"
            android:textColor="@color/list_header_color"
            android:textSize="@dimen/dimen_11sp" />

        <ImageView
            android:id="@+id/shipped_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_5dp" />

        <TextView
            android:id="@+id/shipped_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_20dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="@string/shipped"
            android:textAllCaps="true"
            android:textColor="@color/list_header_color"
            android:textSize="@dimen/dimen_11sp" />
    </com.google.android.flexbox.FlexboxLayout>
</LinearLayout>